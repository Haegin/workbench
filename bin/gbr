#!/bin/sh

# checkout a local branch (sorted a-z) picking first match from grep
# usage:  gbr keyword

if [[ !  -z  $1  ]]; then
  BRANCH=$(eval "git br | sed 's/[\* ]//' | sort -b | grep '$1' | head -n 1")
  if [[ !  -z  $BRANCH  ]]; then
    git checkout $BRANCH
  else
    echo "branch '"$1"' was not found"
  fi
else
  echo "usage: gbr keyword"
fi
