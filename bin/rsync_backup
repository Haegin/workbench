#!/bin/sh

HOSTNAME="$( hostname )"

# backup folders to dreamhost via rsync
rsync -azP --delete --delete-excluded /Users/matt/Documents hanjin:~/rsync/$HOSTNAME
rsync -azP --delete --delete-excluded /Users/matt/Sites hanjin:~/rsync/$HOSTNAME
rsync -azP --delete --delete-excluded /Users/matt/work hanjin:~/rsync/$HOSTNAME
rsync -azP --delete --delete-excluded /u hanjin:~/rsync/$HOSTNAME
