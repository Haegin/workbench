#!/bin/sh

REMOTE_FOLDER=`hostname`-`date +%Y`

# backup these folders to hanjin via rsync
rsync -azP --delete --delete-excluded --exclude /Users/matt/.rsync_exclude /Users/matt/Documents hanjin:~/rsync/$REMOTE_FOLDER
rsync -azP --delete --delete-excluded --exclude /Users/matt/.rsync_exclude /Users/matt/Dropbox hanjin:~/rsync/$REMOTE_FOLDER
rsync -azP --delete --delete-excluded --exclude /Users/matt/.rsync_exclude /Users/matt/Sites hanjin:~/rsync/$REMOTE_FOLDER
rsync -azP --delete --delete-excluded --exclude /Users/matt/.rsync_exclude /Users/matt/work hanjin:~/rsync/$REMOTE_FOLDER
